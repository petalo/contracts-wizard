# Test Environment Overrides
NODE_ENV=test            # Force test environment
DEBUG=false              # Debug mode configuration
DEBUG_TESTS=false        # Enable test setup debug output
ALLOW_PROCESS_EXIT=false # Control process.exit in tests

# Test-specific Logging
LOG_LEVEL=debug                             # More verbose logging in tests
LOG_FILE=test-logging.log                   # Separate log file for tests
LOG_DIR=tests/logs                          # Test-specific log directory
LATEST_LOG_PATH=tests/logs/latest.log       # Test-specific latest log
FULL_LOG_PATH=tests/logs/history-%DATE%.log # Test-specific history logs

# Test Directory Overrides
DIR_OUTPUT=tests/output                          # Test output directory
DIR_TEMPLATES=tests/__common__/fixtures/markdown # Test templates
DIR_CSS=tests/__common__/fixtures/css            # Test CSS files
DIR_CSV=tests/__common__/fixtures/csv            # Test CSV files
DIR_IMAGES=tests/__common__/fixtures/images      # Test images
DIR_REPORTS=tests/reports                        # Test reports
DIR_COVERAGE=tests/coverage                      # Test coverage
TEMPLATES_DIR=tests/__common__/fixtures          # Test templates base
OUTPUT_DIR=tests/output                          # Test output base

# Test Configuration
TEST_TIMEOUT=30000    # Global test timeout in milliseconds
TEST_RETRY_COUNT=3    # Number of times to retry failed tests
SKIP_CLEANUP=false    # Whether to skip test cleanup
SKIP_LONG_TESTS=false # Whether to skip long tests

# CI/CD Overrides
SKIP_POSTINSTALL=true # Skip postinstall in tests
FORCE_COLOR=true      # Force colored output
